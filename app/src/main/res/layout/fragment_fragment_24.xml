<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment_24">

    <RelativeLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/l_1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:background="#ffffff"
            android:layout_width="640dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/l_2"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="60dp"
            android:background="#ffffff"
            android:layout_width="290dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/l_3"
            android:layout_marginTop="610dp"
            android:layout_marginLeft="50dp"
            android:background="#ffffff"
            android:layout_width="640dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/l_4"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="#ffffff"
            android:layout_width="30dp"
            android:layout_height="610dp" />

        <TextView
            android:id="@+id/l_5"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="190dp"
            android:background="#ffffff"
            android:layout_width="30dp"
            android:layout_height="610dp" />

        <TextView
            android:id="@+id/l_6"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="350dp"
            android:background="#ffffff"
            android:layout_width="30dp"
            android:layout_height="610dp" />

        <TextView
            android:id="@+id/l_7"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="670dp"
            android:background="#ffffff"
            android:layout_width="30dp"
            android:layout_height="610dp" />

        <TextView
            android:id="@+id/l_8"
            android:layout_marginTop="255dp"
            android:layout_marginLeft="478dp"
            android:background="#ffffff"
            android:layout_width="96dp"
            android:layout_height="156dp" />
        <RelativeLayout
            android:layout_marginLeft="740dp"
            android:layout_marginTop="29dp"
            android:background="#ffffff"
            android:layout_width="515dp"
            android:layout_height="620dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="40sp"
                android:text="2018-11-12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_week"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                android:textSize="40sp"
                android:text="星期三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/refresh"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/tv_wd"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="30dp"
                android:text="温度：17℃"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sd"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="70dp"
                android:text="相对湿度：50%"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_pm"
                android:layout_marginLeft="226dp"
                android:layout_marginTop="110dp"
                android:text="PM2.5：29μg/m3"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="道路拥堵程度示意："
                    android:textSize="35sp" />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_marginLeft="30dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <TextView
                           android:gravity="right"
                           android:layout_width="100dp"
                           android:layout_height="30dp"
                           android:text="严重拥堵"
                           android:textSize="20sp" />

                       <TextView
                           android:gravity="right"
                           android:layout_width="100dp"
                           android:layout_height="30dp"
                           android:text="中度拥堵"
                           android:textSize="20sp" />

                       <TextView
                           android:gravity="right"
                           android:layout_width="100dp"
                           android:layout_height="30dp"
                           android:text="一般拥堵"
                           android:textSize="20sp" />

                       <TextView
                           android:gravity="right"
                           android:layout_width="100dp"
                           android:layout_height="30dp"
                           android:text="缓行"
                           android:textSize="20sp" />

                       <TextView
                           android:gravity="right"
                           android:layout_width="100dp"
                           android:layout_height="30dp"
                           android:text="畅通"
                           android:textSize="20sp" />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_marginLeft="30dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <TextView
                           android:background="#b01e23"
                           android:gravity="right"
                           android:layout_marginTop="5dp"
                           android:layout_marginBottom="5dp"
                           android:layout_width="100dp"
                           android:layout_height="20dp"
                           android:textSize="20sp" />

                       <TextView
                           android:background="#e33532"
                           android:gravity="right"
                           android:layout_marginTop="5dp"
                           android:layout_marginBottom="5dp"
                           android:layout_width="100dp"
                           android:layout_height="20dp"
                           android:textSize="20sp" />

                       <TextView
                           android:background="#f49b25"
                           android:gravity="right"
                           android:layout_marginTop="5dp"
                           android:layout_marginBottom="5dp"
                           android:layout_width="100dp"
                           android:layout_height="20dp"
                           android:textSize="20sp" />

                       <TextView
                           android:background="#ece93a"
                           android:gravity="right"
                           android:layout_marginTop="5dp"
                           android:layout_marginBottom="5dp"
                           android:layout_width="100dp"
                           android:layout_height="20dp"
                           android:textSize="20sp" />

                       <TextView
                           android:background="#6ab82e"
                           android:gravity="right"
                           android:layout_marginTop="5dp"
                           android:layout_marginBottom="5dp"
                           android:layout_width="100dp"
                           android:layout_height="20dp"
                           android:textSize="20sp" />
                   </LinearLayout>
               </LinearLayout>
               </LinearLayout>
            <ImageView
                android:id="@+id/iv_jj1"
                android:layout_marginBottom="70dp"
                android:layout_marginRight="100dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/jiaojing1_1"
                android:layout_width="80dp"
                android:layout_height="200dp" />
            <ImageView
                android:id="@+id/iv_jj2"
                android:layout_marginBottom="70dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/jiaojing2_1"
                android:layout_width="80dp"
                android:layout_height="200dp" />
            <TextView
                android:layout_marginBottom="70dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="500米"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="#000000"
                android:layout_marginBottom="60dp"
                android:layout_marginRight="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="2dp" />
        </RelativeLayout>


    </RelativeLayout>
</FrameLayout>